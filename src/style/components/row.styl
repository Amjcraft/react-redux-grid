+prefix-classes(prefix)

    .row
        background-color whitecolor
        text-overflow ellipsis
        
        &:hover
            background-color rowhovercolor !important
            
            
        &.empty-row
            text-align center
            height rowheight * 4
        
        &.{activeclass}
            background-color strongcolor
        
        &.{editclass}
            color whitecolor
            background-color editcolor
            boxshadow()
            
            .action-menu-container 
                color initial
            
            &:hover 
                background-color editcolor !important
                
            td 
                border-bottom: 2px solid transparent
                
                &:focus
                    border-bottom: 2px solid actioncolor
                    outline none