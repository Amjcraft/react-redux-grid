+prefix-classes(prefix)

    .action-container
        cursor pointer
        position relative
        width 5px
        
        span
            cursor pointer
            padding-left 5px
            position relative
            
            
            &::before
                cursor pointer
                border-radius(3px)
                position absolute
                text-align center
                top -10px
                right 5px
                width 6px
        
        &.action-menu-selected
            span
                &::before
                    background-color strongcolor