+prefix-classes(prefix)

    .bulkaction-container
        background-color editcolor
        border-radius(3px 3px 0px 0px)
        height 28px
        multipletransition(transform, opacity, top)
        position absolute
        text-align left
        transform translateX(0px) translateY(-37px)
        top -37px
        opacity 0
        zindex('.bulkaction-container')
        width 100%

        .bulkaction-description
            display inline-block;
            font-family fontfamily
            font-size cellfontsize
            overflow hidden
            padding-left 15px
            text-overflow ellipsis
            min-width 70px
            position relative
            top 3px

        .checkbox-container
            border-bottom 1px solid transparent

        button
            button(actioncolor)
            margin 5px 8px
            position relative
            top -1px

        &.removed
            top -100px

        &.shown
            top 0px
            opacity 1
            transform translateY(0px)
