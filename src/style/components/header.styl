+prefix-classes(prefix)

    .header
        background-color lightcolor
        border-bottom: 1px solid strongcolor
        color fontcolor
        font-family fontfamily
        height: headerheight
        
        th
            position relative
            overflow hidden
            text-overflow ellipsis
            
            &.checkbox-container
                border-bottom 1px solid strongcolor
            
            .{sorthandleclass}
                opacity 0
                transition(opacity)
                visibility hidden
                
                &.descend
                    icon('sort-up')
                    &::before
                        top 4px
            
                &.ascend
                    icon('sort-down')
                    &::before
                        top -3px
                
                &::before
                    cursor pointer
                    left 10px
                    position relative
            
            .{draghandleclass}
            
                &::after
                    border-right 1px solid lightcolor
                    content ' '
                    cursor ew-resize
                    position absolute
                    right 0px
                    top 0px
                    width: 10px
                    height 100%
                    transition(border)
                    
            .{draggablecolumnclass}
                cursor move
                    
            &:hover
                .{draghandleclass}
                    &::after
                        border-color strongcolor
                        
                 .{sorthandlevisibleclass}
                    opacity 1
                    visibility visible
                
        th:nth-last-child(1), th:nth-last-child(2)
            overflow initial
            
            .{draghandleclass}
                &::after
                    border none
                    cursor auto